<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DialView">
        <attr name="indicator_radius" format="dimension" />         <!--指示器半径-->
        <attr name="indicator_color" format="color" />              <!--指示器颜色-->
        <attr name="indicator_stroke_width" format="dimension" />   <!--指示器绘边尺寸-->
        <attr name="indicator_stroke_color" format="color" />       <!--指示器绘边颜色-->
        <attr name="progress_bg_color" format="color" />            <!--进度条背景颜色-->
        <attr name="progress_bg_width" format="dimension" />        <!--进度条背景尺寸-->
        <attr name="progress_color" format="color" />               <!--进度条颜色-->
        <attr name="progress_width" format="dimension" />           <!--进度条尺寸-->
        <attr name="text_size_normal" format="dimension" />         <!--文本的尺寸-->
        <attr name="text_size_select" format="dimension" />         <!--文本的尺寸-->
        <attr name="text_color_normal" format="color" />            <!--文本的默认颜色-->
        <attr name="text_color_select" format="color" />            <!--文本的选中颜色-->
        <attr name="unit_title" format="string" />                  <!--单位-->

    </declare-styleable>

    <declare-styleable name="NumberTextView">
        <attr name="background_color" format="color" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
    </declare-styleable>
</resources>